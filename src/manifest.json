{
  "manifest_version": 3,
  "name": "Chrome Extension 3",
  "description": "Template with React",
  "version": "1",

  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "/popup.html",
    "default_icon": "/broccoli.png",
    "default_title": "Click Me!"
  },
  "icons": {
    "16": "/broccoli.png",
    "32": "/broccoli.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "run_at": "document_end",
      "js": ["content.bundle.js"]
    }
  ]
}